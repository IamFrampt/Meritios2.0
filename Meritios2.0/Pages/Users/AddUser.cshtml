@page
@model Meritios2._0.Pages.Users.AddUserModel
@{
}

<form method="post">

    <h1>Add new user</h1>

    <div class="mb-3">
        <label class="form-label">Namn</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.Name"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="AddUserRequest.Email" />
    </div>

    <div class="mb-3">
        <label class="form-label">Telefonnummer</label>
        <input type="tel" class="form-control" asp-for="AddUserRequest.Phone" />
    </div>

    <div class="mb-3">
        <label class="form-label">Skola</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.School" />
    </div>

    <div class="mb-3">
        <label class="form-label">Utbildning</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.Education" />
    </div>

    <div class="mb-3">
        <label class="form-label">Stad</label>
        <input type="text" class="form-control" asp-for="AddUserRequest.Location" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-success">Add User</button>
    </div>

</form>